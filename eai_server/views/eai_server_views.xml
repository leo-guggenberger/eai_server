<?xml version="1.0"?>
<openerp>
   <data>

        <!-- Messages View -->
        <record id="messages_action" model="ir.actions.act_window">
            <field name="name">Messages</field>
            <field name="res_model">eai_server.messages</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">No messages available at the moment.</p>
            </field>
        </record>
        <record id="messages_tree_view" model="ir.ui.view">
            <field name="name">messages.tree.view</field>
            <field name="view_type">tree</field>
            <field name="model">eai_server.messages</field>
            <field name="arch" type="xml">
                <tree string="Messages" default_order="create_date desc">
                    <field name="create_date" />
                    <field name="direction" />
                    <field name="sender_id" />
                    <field name="receiver_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <record id="messages_form_view" model="ir.ui.view">
            <field name="name">messages.form.view</field>
            <field name="view_type">form</field>
            <field name="model">eai_server.messages</field>
            <field name="arch" type="xml">
                <form string="Messages">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <div name="button_box" class="oe_right" position="inside">
                            <widget type="upload_pictures" class="oe_picture_gallery">
                            <button class="oe_inline oe_stat_button oe_picture_gallery" name="upload_pictures" type="object" icon="fa-cloud-upload" string="Upload Pictures" ><div class="stat_button_icon fa fa-cloud-upload fa-fw"></div><div>Upload Images</div></button>
                            </widget>
                        </div>
                        <group>
                            <field name="date" />
                            <field name="description" />
                            <field name="photographer" />
                            <field name="picture_number" />
                        </group>
                        <notebook>
                            <page string="Pictures">
                                <field name="picture_ids" widget="one2many_list">
                                    <tree string="Pictures" editable="bottom" default_order="picture_id asc">
                                        <field name="image" widget="image" height="64" filename="name"/>
                                        <field name="name" />
                                        <field name="image_alt" />
                                        <field name="image_resolution" />
                                        <field name="visits" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
</record>
      
        <!-- MenÃ¼ EAI Server -->
        <menuitem id="eai_server_menu" name="EAI Server" parent="knowledge.menu_document" />
        <menuitem id="eai_server_messages_menu" name="Messages" parent="eai_server_menu" action="messages_action" />
        
    </data>
</openerp>
